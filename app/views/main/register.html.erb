<div class="" style="display:inline-block; vertical-align:top">
  <form  action="/create_lender" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <p>First Name: <input type="text" name="f_name"></p>
    <p>Last Name: <input type="text" name="l_name"></p>
    <p>Email: <input type="text" name="email"></p>
    <p>Password: <input type="password" name="password"></p>
    <p>Confirm Password: <input type="password" name="password_confirm"></p>
    <p>Money: <input type="number" name="balance" min="100" max="150000" step='100' value="100"></p>
    <input type="submit" name="lenderRegBtn" value="Register">
  </form>
  <a href="/login">Already a member?</a>
</div>
<div class="" style="display:inline-block">
  <form  action="/create_borrower" method="post">
    <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
    <p>First Name: <input type="text" name="f_name"></p>
    <p>Last Name: <input type="text" name="l_name"></p>
    <p>Email: <input type="text" name="email"></p>
    <p>Password: <input type="password" name="password"></p>
    <p>Confirm Password: <input type="password" name="password_confirm"></p>
    <p>Need Money For: <input type="text" name="cause" value=""></p>
    <p>Description: <textarea name="description" rows="4" cols="40"></textarea></p>
    <p>Amount Needed: <input type="number" name="goal" min="100" max="50000" step='100' value="100"></p>
    <input type="submit" name="borrowerRegBtn" value="Register">
  </form>
  <a href="/login">Already a member?</a>
</div>
<div class="">
    <% if flash[:errors] %>
      <% flash[:errors].each do |error| %>
          <h4 style="color:red"> <%= error[1][0] unless error[0] == "password" %> </h4>
          <h4 style="color:red"> <%= error[1][1] if error[0] == "password" %> </h4>
      <% end %>
    <% end %>
</div>
